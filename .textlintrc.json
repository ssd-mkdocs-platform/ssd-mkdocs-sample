{
  "filters": {},
  "rules": {
    "no-mix-dearu-desumasu": {
      "preferInBody": "である",
      "preferInHeader": "である",
      "preferInList": "である"
    },
    "preset-japanese": {
      "sentence-length": { "max": 150 },
      "max-ten": { "max": 4 },
      "no-doubled-joshi": {
        "min_interval": 1,
        "strict": false,
        "allow": ["も", "や", "か"],
        "separatorChars": ["、", "。", "?", "!", "？", "！", "「", "」"]
      },
      "ja-no-mixed-period": {
        "allowPeriodInList": false,
        "forcePeriodInList": false
      }
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": false,
      "ja-space-around-code": false
    },
    "preset-jtf-style": {
      "1.1.3.箇条書き": false,
      "1.2.1.句点(。)と読点(、)": true,
      "1.2.2.ピリオド(.)とカンマ(,)": true,
      "2.1.8.算用数字": true,
      "2.2.2.算用数字と漢数字の使い分け": true,
      "3.1.1.全角文字と半角文字の間": false,
      "3.1.2.全角文字どうし": true,
      "4.1.3.ピリオド(.)、カンマ(,)": true,
      "4.2.6.ハイフン(-)": false,
      "4.3.1.丸かっこ（）": true,
      "4.3.2.大かっこ［］": true
    },
    "prh": {
      "rulePaths": [
        "./node_modules/textlint-rule-preset-icsmedia/dict/prh.yml"
      ]
    }
  }
}
